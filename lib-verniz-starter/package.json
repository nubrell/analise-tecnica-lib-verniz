{
    "name": "lib-verniz",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*",
        "shared/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "dev": "turbo run dev --filter=docs",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish",
        "component": "hygen component web",
        "publish:component": "bash scripts/publish.sh",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf */node_modules && rm -rf */*/node_modules && rm -rf */*/dist"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@types/minimatch": "^6.0.0",
        "hygen": "^6.2.11",
        "turbo": "^2.0.4",
        "typescript": "^5.4.5"
    },
    "packageManager": "yarn@1.22.19",
    "engines": {
        "node": ">=18.18.0"
    }
}
